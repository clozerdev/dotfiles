# Volume
bindsym XF86AudioMute exec --no-startup-id $HOME/.config/i3/scripts/volume.sh volume_mute
bindsym XF86AudioRaiseVolume exec --no-startup-id $HOME/.config/i3/scripts/volume.sh volume_up
bindsym XF86AudioLowerVolume exec --no-startup-id $HOME/.config/i3/scripts/volume.sh volume_down

# Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id $HOME/.config/i3/scripts/brightness.sh up
bindsym XF86MonBrightnessDown exec --no-startup-id $HOME/.config/i3/scripts/brightness.sh down

# Microphone
bindsym XF86AudioMicMute exec --no-startup-id $HOME/.config/i3/scripts/micmute.sh
