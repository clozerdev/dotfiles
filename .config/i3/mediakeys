# Volume
bindsym XF86AudioMute exec --no-startup-id /usr/bin/wpctl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioRaiseVolume exec --no-startup-id /usr/bin/wpctl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id /usr/bin/wpctl set-sink-volume @DEFAULT_SINK@ -10%

# Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id /usr/bin/brightnessctl set 10%+
bindsym XF86MonBrightnessDown exec --no-startup-id /usr/bin/brightnessctl set 10%-

# Microphone
bindsym XF86AudioMicMute exec --no-startup-id /usr/bin/wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
