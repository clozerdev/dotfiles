# window positioning
default_border normal 2
default_floating_border normal 2
hide_edge_borders both
title_align center
gaps inner 8

# window aspect
set $focused		#bd93f9
set $unfocused		#555555
set $urgent			#aa0000
set $foreground		#ffffff

client.focused $focused $focused $foreground $focused $focused
client.unfocused $unfocused $unfocused $foreground $unfocused $unfocused
client.focused_inactive $unfocused $unfocused $foreground $unfocused $unfocused
client.urgent $urgent $urgent $foreground $urgent $urgent

font xft:DejaVu Sans Bold 10
